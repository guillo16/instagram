<div class="coment-container">
  <div class="coment-image">
    <%= cl_image_tag review.user.photo, crop: :fill %>
  </div>
  <div>
    <h3><%= review.user.nickname %></h3>
    <p><%= review.content %></p>
  </div>
</div>
<div class="date">
  <h4><%= review.created_at.strftime("%B %d of %Y") %></h4>
</div>
