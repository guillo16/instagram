<%= link_to destroy_user_session_path, method: :delete do %>
<p>log out</p><i class="fas fa-sign-out-alt"></i>
<% end %>
<div class="profile-container">
  <div class="profile-top">
    <% avatar_url =  current_user.photo || "https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1400&q=80" %>
    <%= cl_image_tag avatar_url, height: 100, width: 100, crop: :fill, class: "user-avatar" %>
    <h2><%= current_user.nickname %></h2>
  </div>
  <div class="profile-followers">
   <h2><%= @posts.count %></h2>
   <p>Publications</p>
 </div>
 <div class="profile-followers">
   <h2><%= @user.followers.count %></h2>
   <p>Followers</p>
 </div>
 <div class="profile-followers">
   <h2><%= @user.following.count %></h2>
   <p>Following</p>
 </div>
</div>
<div class="edit-profile">
  <%= link_to "Edit profile", edit_user_path, class: "btn-edit-profile" %>
</div>

<% @posts.each do |post| %>

<%= render 'shared/cards', post: post %>
<% end %>

